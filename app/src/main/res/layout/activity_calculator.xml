<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <!--定义一个横跨4列的文本框作为计算器的显示部分
   并设置相关属性-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="4"
        android:textSize="50sp"
        android:layout_gravity="left"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="0.0"
        android:id="@+id/display"
        android:singleLine="true"
        />


<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:stretchColumns="0, 1, 2, 3"
    android:background="@color/colorPrimary"
    tools:context="com.driver.shinekaye.olddriver.CalculatorActivity">





    <!--一个横跨4列的按钮作为清除键 -->
    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Clear"
            android:id="@+id/clear"
            android:textAllCaps="false"
            />
    </TableRow>


    <!--数字与运算符 -->
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:layout_weight="1"
                android:textSize="40sp"
                android:id="@+id/num7"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:textSize="40sp"
                android:id="@+id/num8"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:textSize="40sp"
                android:id="@+id/num9"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:textSize="40sp"
                android:id="@+id/divide"
                />
        </LinearLayout>

    </TableRow>
    <TableRow>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:layout_weight="1"
                android:textSize="40sp"
                android:id="@+id/num4"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:textSize="40sp"
                android:id="@+id/num5"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/buttonText"
                android:background="@color/buttonColor"
                android:textSize="40sp"
                android:id="@+id/num6"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="×"
                android:textSize="40sp"
                android:id="@+id/multiply"
                />
        </LinearLayout>

    </TableRow>
    <TableRow>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/buttonText"
            android:background="@color/buttonColor"
            android:layout_weight="1"
            android:textSize="40sp"
            android:id="@+id/num1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/buttonText"
            android:background="@color/buttonColor"
            android:textSize="40sp"
            android:id="@+id/num2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/buttonText"
            android:background="@color/buttonColor"
            android:textSize="40sp"
            android:id="@+id/num3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:text="+"
            android:textSize="40sp"
            android:id="@+id/plus"
            />
    </LinearLayout>

</TableRow>

    <TableRow>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/buttonText"
            android:background="@color/buttonColor"
            android:layout_weight="1"
            android:textSize="40sp"
            android:id="@+id/num0"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/buttonText"
            android:background="@color/buttonColor"
            android:text="."
            android:textSize="40sp"
            android:id="@+id/dot"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:text="="
            android:textSize="40sp"
            android:id="@+id/equal"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:text="-"
            android:textSize="40sp"
            android:id="@+id/subtract"
            />
    </LinearLayout>

</TableRow>
</TableLayout>
    </LinearLayout>